<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondaryInverse">@color/cinClaro</item>
    </style>

    <style name="CleberActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/CleberActionBar</item>
    </style>

    <style name="CleberActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/Cleber.TitleTextStyle</item>
    </style>

    <style name="Cleber.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bbadigitalBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">?attr/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/cinClaro</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorForeground">@color/cinClaro</item>
        <item name="android:textColorSecondary">@color/cinClaro</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="boyCaderneta" parent="android:Theme">
        <item name="android:colorForeground">@color/cardview_light_background</item>
        <item name="android:textColorPrimary">@color/cardview_light_background</item>
    </style>

    <style name="girlCaderneta" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorForeground">@color/cardview_light_background</item>
        <item name="android:textColorPrimary">@color/cardview_light_background</item>
    </style>

</resources>
