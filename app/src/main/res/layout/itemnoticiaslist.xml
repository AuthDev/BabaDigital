<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tituloNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="TextView"
                    android:textColor="@color/secondary_text_material_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/conteudoNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="TextView bebebebebebebebebeebebebbebebbebebebbebebebebebebebebeb" />

                <TextView
                    android:id="@+id/fontNoticias"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="TextView"
                    android:textColor="?attr/colorButtonNormal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imagemNoticia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/noticiasicon" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>